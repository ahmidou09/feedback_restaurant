{
  "name": "restaurant-feedback-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cd backend && node src/server.js",
    "server": "cd backend && nodemon src/server.js",
    "client": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "postinstall": "cd frontend && npm install && cd ../backend && npm install",
    "build": "cd frontend && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.4",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
